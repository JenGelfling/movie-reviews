    <main class="container">
        <div class="container" >
            <form id="search-form" action="/search-results" method="get">
                <input type="text" id="title" class="col-12 mt-5 ml-5 mr-5 rounded" placeholder="Enter movie title">
                <button type="submit" class="col-12 ml-5 rounded" justify-content="center">Search</button>
            </form>
            {{!-- <input id="search-bar" class="col-12 mt-5 ml-5 mr-5 rounded" type="text" placeholder="Search for movies"> --}}
