                <h4 class=" ml-0 pl-0 col-3">Popular Reviews</h4>
            </div>
            <div>
                <div class="bg-white popular-reviews container mb-3">
                  {{#each reviews as |review|}}

                    <h4 class="row pl-3 pt-3">{{review.title}}</h4>
                    <h5 class="row pl-3 pt-1">{{review.score}}/10</h5> 
                    <p class="row pl-3 pt-3">{{review.content}}</p>

                    <div>
                       <p class="user-signature">-{{user.username}}</p>
                       <button class="mb-3 btn"><i class="fa fa-thumbs-up"></i></button>
                       <button class="mb-3 btn"><i class="fa fa-thumbs-down"></i></button>
                    </div>
